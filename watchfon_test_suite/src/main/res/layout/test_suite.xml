<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">


        <Spinner
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/attack_selection"
                android:layout_weight="3"
                android:entries="@array/attacks_array"
        />
        <Button
                android:text="Run"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/attack_start"
                android:layout_weight="1"/>
    </LinearLayout>


    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/progressBar2"
            android:layout_weight="1" android:max="100" android:progress="50"/>




    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:layout_gravity="center">

        <TextView
                android:text="Sensor"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:layout_marginRight="5dp"
                android:textColor="#000"
                android:textAlignment="center"
                android:fontFamily="@font/quicksand_bold"
        />

        <TextView
                android:text="Inj."
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="#000"
                android:textAlignment="center"
                android:textSize="20dp"
                android:layout_marginRight="5dp"/>

        <TextView
                android:text="Det."
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#000"
                android:layout_height="match_parent"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="20dp"
                android:textAlignment="center"/>


    </LinearLayout>


    <edu.umich.carlab.watchfon_test_suite.SensorRow
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/speed"
            app:name="Speed" />

    <edu.umich.carlab.watchfon_test_suite.SensorRow
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/steering"
            app:name="Steering" />

    <edu.umich.carlab.watchfon_test_suite.SensorRow
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/gear"
            app:name="Gear" />

    <edu.umich.carlab.watchfon_test_suite.SensorRow
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/rpm"
            app:name="RPM" />

    <edu.umich.carlab.watchfon_test_suite.SensorRow
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/odometer"
            app:name="Odometer" />

    <edu.umich.carlab.watchfon_test_suite.SensorRow
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/fuel"
            app:name="Fuel" />

</LinearLayout>